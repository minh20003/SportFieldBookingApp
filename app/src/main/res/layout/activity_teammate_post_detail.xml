<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.TeammatePostDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDetailSportType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Môn: Bóng đá"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDetailPosterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Người đăng: Nguyễn Văn A"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetailPlayDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Thời gian: 18:00 - 2025-10-25"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetailPlayersNeeded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cần tìm: 3 người"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả chi tiết:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tìm người đá giao hữu, trình độ trung bình. Chi phí chia đều."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin liên hệ:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDetailContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SĐT: 09xxxxxxxx"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:textColor="?attr/colorPrimary"
            android:textIsSelectable="true"/>

        <Button
            android:id="@+id/btnDetailAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Tham gia"/>

    </LinearLayout>
</ScrollView>